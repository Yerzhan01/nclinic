{
    "name": "patient-assistant-system",
    "version": "1.0.0",
    "description": "AI-powered patient assistant system for clinic workflow automation",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc -p tsconfig.json && tsc-alias",
        "start": "node dist/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint .",
        "format": "prettier --write .",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:push": "prisma db push",
        "db:studio": "prisma studio",
        "db:seed": "prisma db seed"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@fastify/cookie": "^11.0.2",
        "@fastify/cors": "^10.0.2",
        "@fastify/jwt": "^9.0.2",
        "@fastify/rate-limit": "^10.2.2",
        "@fastify/websocket": "^11.2.0",
        "@prisma/client": "^6.2.1",
        "@types/jsonwebtoken": "^9.0.10",
        "bcrypt": "^5.1.1",
        "bullmq": "^5.34.8",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "dayjs": "^1.11.13",
        "fastify": "^5.2.1",
        "ioredis": "^5.4.2",
        "jsonwebtoken": "^9.0.3",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "telegraf": "^4.16.3",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/node": "^22.10.5",
        "@typescript-eslint/eslint-plugin": "^8.20.0",
        "@typescript-eslint/parser": "^8.20.0",
        "dotenv": "^17.2.3",
        "eslint": "^9.18.0",
        "prettier": "^3.4.2",
        "prisma": "^6.2.1",
        "tsc-alias": "^1.8.8",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "vitest": "^2.1.8"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}